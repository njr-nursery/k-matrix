#!/usr/bin/env bash

set -e      # Exit immediately if any command fails
set -u      # Using undefined variables is an error. Exit immediately

base_dir="$(cd "$(dirname "$0")/.."; pwd)"
uiuc_dir="$base_dir/backends/java/"
rv_dir="$base_dir/backends/rv/"

use_uiuck() {
    git submodule update  --init "$uiuc_dir/k"
    (cd "$uiuc_dir/k"; mvn package -q -DskipTests)
    PATH="$uiuc_dir/k/k-distribution/target/release/k/bin/:$PATH"
    PATH="$uiuc_dir/helpers/:$PATH"
}

with_kserver() {
    local exit_status=0
    kserver & sleep 2
    "$@" || exit_status=$?
    stop-kserver || true # Fails for some reason :-(
    return $exit_status
}

use_rvk() {
    type opam >/dev/null || {
        echo >&2 '`opam` not installed`'
        exit 1
    }
    git submodule update  --init "$rv_dir/k"
    PATH="$rv_dir/k/k-distribution/target/release/k/bin/:$PATH"
    PATH="$rv_dir/helpers/:$PATH"

    (cd "$rv_dir/k"; mvn package -q -DskipTests)
    local release_dir="$rv_dir/k/k-distribution/target/release/k"
    export \
        PATH="$release_dir/lib/native/linux:$release_dir/lib/native/linux64:$release_dir/bin/:$PATH" \
        LD_LIBRARY_PATH="$release_dir/lib/native/linux64:${LD_LIBRARY_PATH:-}"

    opam init --no-setup
    opam repository add k "$rv_dir/k/k-distribution/target/release/k/lib/opam" \
        || opam repository set-url k "$rv_dir/k/k-distribution/target/release/k/lib/opam"
    cp "$rv_dir/k"/k-distribution/include/ocaml/fakelibs/{libffi.a,libz.a}
    export LIBFFI_LIBS="-L$rv_dir/k/k-distribution/include/ocaml/fakelibs -lffi"
    export LIBFFI_CFLAGS="-I$rv_dir/k/k-distribution/include/ocaml/fakelibs"
    opam update
    opam switch 4.03.0+k
    opam install --yes mlgmp zarith uuidm cryptokit

    # TODO: some of RV's K's scripts don't set classpath correctly, and
    # kserver must be used.
    eval $(opam config env)
}

[[ $# -ne 0 ]] || {
    echo >&2 "Usage: $0 [uiuck|rvk] command args"
    exit 1
}

which_k="$1"; shift
case "$which_k" in
    uiuck) use_uiuck; "$@" ;;
           # TODO: RVK requires using kserver -- otherwise some of it's scripts
           # don't set classpath correctly
    rvk)   use_rvk; with_kserver "$@" ;;
    *)     echo >&2 "Unknown K: '$which_k'"; exit 1 ;;
esac
